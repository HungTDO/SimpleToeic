<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            style="@style/style_menu_button"
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_bkg_corner"
            android:text="RESULT"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTestName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:text="Test: Reading Part 1"
            android:textColor="@color/color_black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:text="Score: 8/10"
            android:textColor="@color/color_black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvBestScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:text="Best Score: 9"
            android:textColor="@color/color_black"
            android:textSize="25sp" />

      <!--   <TextView
            android:id="@+id/tvTimeSpent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:text="Time Spent: 20m"
            android:textColor="@color/color_black"
            android:textSize="30sp" /> -->

        <com.framgia.simpletoeic.custom.StarLayout
            android:id="@+id/starScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal" >

            <!--
                 <Button
                android:id="@+id/btnPreview"
                style="@style/style_button_reading"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:text="PREVIEW" />
            -->

            <Button
                android:id="@+id/btnDone"
                style="@style/style_button_reading"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="DONE" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>